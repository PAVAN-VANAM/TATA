generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

// Profile model
model profile {
  profileId  String       @id @default(auto()) @map("_id") @db.ObjectId // MongoDB ObjectID
  userId     String       @unique
  name       String
  password   String
  department String
  batchIds   String[]     @db.ObjectId // Array of ObjectIDs to store references to Batch documents
  attendance attendance[] // Relationship with Attendance
}

// Batch model
model batch {
  batchId    String       @id @default(auto()) @map("_id") @db.ObjectId // MongoDB ObjectID
  batch_name String       @unique
  faculty    String
  token      String
  attendance attendance[] // Relationship with Attendance
}

// Attendance model
model attendance {
  attendanceId String   @id @default(auto()) @map("_id") @db.ObjectId // MongoDB ObjectID
  userId       String   @db.ObjectId // Reference to Profile
  batchId      String   @db.ObjectId // Reference to Batch
  attendance   Boolean  @default(false)
  date         DateTime @default(now())

  profile profile @relation(fields: [userId], references: [profileId]) // Relation with Profile
  batch   batch   @relation(fields: [batchId], references: [batchId]) // New relation with Batch
}
